@model IEnumerable<LogicaAplicacion.Dtos.Usuarios.UsuarioDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Crear Usuario</a>
</p>

@if (@ViewBag.Mensaje != null)
{
    <div class="alert alert-danger pt-3 pb-4" role="alert">
        <p>@ViewBag.Mensaje</p>
    </div>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                @if (!item.Eliminado)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellido)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", "Admin", new { Id = item.Id }, new { @class = "btn btn-dark m-1" }) |
                            @Html.ActionLink("Detalles", "Details", "Admin", new { Id = item.Id }, new { @class = "btn btn-dark m-1" }) |
                            @Html.ActionLink("Eliminar", "Delete", "Admin", new { Id = item.Id }, new { @class = "btn btn-dark m-1" })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
else
{
    <p>
        No hay usuarios registrados.
    </p>
}
